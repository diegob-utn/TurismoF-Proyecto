@using TurismoF.Modelos
@model TurismoF.Modelos.Asiento
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Asiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Codigo" class="controly-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoAsiento" class="controly-label"></label>
                <select asp-for="TipoAsiento" class="form-control"
                        asp-items="Html.GetEnumSelectList<TipoAsiento>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumeroVagon" class="control-label"></label>
                <input asp-for="NumeroVagon" class="form-control" />
                <span asp-validation-for="NumeroVagon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VagonId" class="control-label"></label>
                <select asp-for="VagonId" class ="form-control" asp-items="ViewBag.VagonId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
